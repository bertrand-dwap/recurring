{% extends 'base.html.twig' %}

{% block title %}{{ recurringTask.task }}: Historique{% endblock %}

{% block body %}
    <h1>Historique</h1>
    <a href="{{ path('app_recurring_task_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Revenir Ã  la liste
    </a>
    <p>{{ recurringTask.task }}</p>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Commentaires</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.date ? log.date|date('d/m/Y') : '' }}</td>
                <td>{{ log.comments }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun historique</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
