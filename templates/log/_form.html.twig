{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        <div class="mb-3">
            {{ form_label(form.date, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.date) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.comments, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.comments, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            {{ form_errors(form.comments) }}
        </div>

        {{ form_widget(form._token) }}

        <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>

    {{ form_end(form) }}